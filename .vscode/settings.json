{
	"editor.formatOnSave": true,
	"editor.tabSize": 4,

	"prettier.useTabs": true,
	"prettier.singleQuote": true,
	"prettier.tabWidth": 4,

	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
		"**/.classpath": true,
		"**/.project": true,
		"**/.settings": true,
		"**/.factorypath": true,
		"**/node_modules": true,
		"**/*.spec.ts": true,
		"**/.gitignore": true,
		"src/zone-flags.ts": true,
		"src/test.ts": true,
		"src/polyfills.ts": true,
		"src/environments": true,
		"**/theme": true,
		"**/environments": true,
		"**/assets": true
	},

	"workspace.isHidden": false,
	"explorerExclude.backup": null
}
